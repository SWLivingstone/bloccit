<div>
  <%= link_to "Create Advertisement", new_advertisement_path, class: "btn btn-success button" %>
</div>
<h1>All Advertisements</h1>
<% @advertisements.each do |ad| %>
<div class="media">
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to ad.title, ad %>
    </h4>
  </div>
</div>
<% end %>
